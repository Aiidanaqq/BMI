<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.bmi.HelloController" style="-fx-background-color: #6633cc;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Weight Input -->
    <Label text="Weight (kg):" GridPane.columnIndex="0" GridPane.rowIndex="0"
           style="-fx-text-fill: #FCE4EC; -fx-font-size: 14px;"/>
    <TextField fx:id="weightInput" GridPane.columnIndex="1" GridPane.rowIndex="0"
               style="-fx-background-color: #FFFFFF; -fx-text-fill: #333333;"/>

    <!-- Height Input (in centimeters) -->
    <Label text="Height (cm):" GridPane.columnIndex="0" GridPane.rowIndex="1"
           style="-fx-text-fill: #FCE4EC; -fx-font-size: 14px;"/>
    <TextField fx:id="heightInput" GridPane.columnIndex="1" GridPane.rowIndex="1"
               style="-fx-background-color: #FFFFFF; -fx-text-fill: #333333;"/>

    <!-- Calculate Button -->
    <Button text="Calculate BMI" onAction="#onCalculateBMI" GridPane.columnIndex="1" GridPane.rowIndex="2"
            style="-fx-background-color: #3399FF; -fx-text-fill: #333333;"/>

    <!-- BMI Result -->
    <Label fx:id="bmiResultLabel" text="BMI: " GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"
           style="-fx-text-fill: #FCE4EC; -fx-font-size: 16px;"/>
    <Label fx:id="bmiStatusLabel" text="Status: " GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2"
           style="-fx-text-fill: #FCE4EC; -fx-font-size: 16px;"/>

    <!-- Clear Button -->
    <Button text="Clear" onAction="#onClearFields" GridPane.columnIndex="1" GridPane.rowIndex="5"
            style="-fx-background-color: #3399FF; -fx-text-fill: #333333;"/>
</GridPane>
